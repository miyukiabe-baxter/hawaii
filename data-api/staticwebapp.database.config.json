{
    "$schema": "../schemas/hawaii.draft-01.schema.json",
    "data-source": {
      "database-type": "cosmos"
    },
    "cosmos": {
      "database": "sql-for-miabe-cosmodb-sql",
      "container": "container1",
      "schema": "schema.gql"
    },
    "runtime": {
      "rest": {
        "enabled": false
      },
      "graphql": {
        "enabled": true,
        "path": "/graphql",
        "allow-introspection": true
      },
      "host": {
        "mode": "development",
        "cors": {
          "origins": [ "http://localhost:5000" ],
          "allow-credentials": false
        },
        "authentication": {
          "provider": "StaticWebApps"
        }
      }
    },
    "entities": {
      "Player": {
        "source": "sql-for-miabe-cosmodb-sql.container1",
        "rest": false,
        "graphql": true,
        "permissions": [
          {
            "role": "anonymous",
            "actions": [ "create", "read", "update", "delete" ]
          },
          {
            "role": "authenticated",
            "actions": [ "create", "read", "update", "delete" ]
          }
        ]
      }
    }
  }